# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/minichannel"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5100
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3100,http://localhost:4000,http://127.0.0.1:3100,http://127.0.0.1:4000"

# Additional production domain (optional - ziqrishahab.com already allowed by default)
# Only set this if you want to allow OTHER domains besides ziqrishahab.com
PRODUCTION_DOMAIN=""

# Backup Configuration
BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS=7

# Socket.io Configuration
SOCKET_CORS_ORIGIN="http://localhost:3100"
